    <Window.Resources>
        <local:UserListColl x:Key="UserColl"/>
        <Style TargetType="{x:Type custom:ImgBtn}" x:Key="ImgBtnStyle">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="LightGray" Opacity="0.5"></SolidColorBrush>
                </Setter.Value>
            </Setter>            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type custom:ImgBtn}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Image x:Name="img" Source="{TemplateBinding NormalImageSrc}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="img" Property="Source" 
                                        Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type custom:ImgBtn}}, Path=ClickImageSrc}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers >
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="LightSkyBlue" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="LightBlue"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="bigBtnStyle" TargetType="{x:Type custom:ImgBtn}" BasedOn="{StaticResource ImgBtnStyle}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style x:Key="smallBtnStyle" TargetType="{x:Type custom:ImgBtn}" BasedOn="{StaticResource ImgBtnStyle}">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="25"/>
        </Style>
