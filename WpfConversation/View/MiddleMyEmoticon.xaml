<UserControl x:Class="WpfConversation.View.MiddleMyEmoticon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfConversation.View"
               mc:Ignorable="d" 
             x:Name="uc"             
             d:DesignHeight="120" d:DesignWidth="300" Background="White">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

          
            <Grid x:Name="text" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Image Source="{Binding EmoticonText}" Grid.Column="0" HorizontalAlignment="Right" Width="70" Height="70"/>


            </Grid>
        </Grid>

    </Grid>
</UserControl>
